{
  "name": "simple-cli",
  "version": "0.2.0",
  "description": "A headless, minimalist, agentic coding assistant with MCP support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "simple-cli": "./bin/run.js"
  },
  "oclif": {
    "bin": "simple-cli",
    "dirname": "simple-cli",
    "commands": "./dist/commands",
    "plugins": [],
    "topicSeparator": " ",
    "topics": {
      "mcp": {
        "description": "MCP server management"
      },
      "git": {
        "description": "Git operations"
      }
    }
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "node --loader ts-node/esm --watch src/index.ts",
    "build": "tsc && oclif manifest",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "format": "prettier --write src/ tests/",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build"
  },
  "keywords": [
    "cli",
    "agent",
    "coding-assistant",
    "llm",
    "mcp",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "litellm",
    "aider"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@oclif/core": "^4.0.0",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "diff": "^5.2.0",
    "dotenv": "^16.4.7",
    "fast-levenshtein": "^3.0.0",
    "jsonrepair": "^3.13.2",
    "openai": "^6.16.0",
    "ora": "^8.0.0",
    "picocolors": "^1.0.0",
    "simple-git": "^3.22.0",
    "ts-morph": "^22.0.0",
    "zod": "^3.24.1",
    "fast-glob": "^3.3.2",
    "turndown": "^7.2.0",
    "gpt-tokenizer": "^2.5.0"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/diff": "^5.2.3",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^22.19.7",
    "oclif": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@types/turndown": "^5.0.5"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ]
}
