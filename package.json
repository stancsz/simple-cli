{
  "name": "@stan-chen/simple-cli",
  "version": "0.2.9",
  "description": "A lean, lightweight coding agent. Packs a punch with token efficiency.",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "simple": "dist/cli.js",
    "simple-daemon": "bin/simple-daemon"
  },
  "scripts": {
    "start": "node --loader ts-node/esm src/cli.ts",
    "start:brain": "npx tsx src/mcp_servers/brain/index.ts",
    "daemon": "node --loader ts-node/esm src/daemon.ts",
    "start:slack": "node --loader ts-node/esm src/interfaces/slack.ts",
    "dev": "node --loader ts-node/esm --watch src/cli.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/ tests/",
    "format": "prettier --write src/ tests/"
  },
  "keywords": [
    "cli",
    "agent",
    "coding-assistant",
    "llm",
    "mcp",
    "ai",
    "openai",
    "anthropic",
    "gemini",
    "litellm",
    "aider"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=22.12.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "@ai-sdk/google": "^3.0.20",
    "@ai-sdk/openai": "^3.0.25",
    "@anthropic-ai/sdk": "^0.74.0",
    "@clack/prompts": "^0.7.0",
    "@lancedb/lancedb": "^0.26.2",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@oclif/core": "^4.0.0",
    "@slack/bolt": "^4.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node-fetch": "^2.6.13",
    "@xenova/transformers": "^2.17.2",
    "ai": "^6.0.67",
    "apache-arrow": "^18.1.0",
    "better-sqlite3": "^12.6.2",
    "body-parser": "^1.20.4",
    "chalk": "^5.3.0",
    "chokidar": "^5.0.0",
    "cors": "^2.8.6",
    "diff": "^5.2.0",
    "dotenv": "^16.4.7",
    "express": "^4.22.1",
    "fast-glob": "^3.3.2",
    "fast-levenshtein": "^3.0.0",
    "glob": "^13.0.0",
    "gpt-tokenizer": "^2.5.0",
    "jsonrepair": "^3.13.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "openclaw": "^2026.2.9",
    "ora": "^8.0.0",
    "picocolors": "^1.0.0",
    "proper-lockfile": "^4.1.2",
    "simple-git": "^3.22.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "ts-morph": "^22.0.0",
    "turndown": "^7.2.0",
    "yaml": "^2.8.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@oclif/test": "^4.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/chokidar": "^1.7.5",
    "@types/diff": "^5.2.3",
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^22.19.7",
    "@types/node-cron": "^3.0.11",
    "@types/proper-lockfile": "^4.1.4",
    "@types/turndown": "^5.0.5",
    "oclif": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md",
    "docs/assets/logo.jpeg"
  ]
}